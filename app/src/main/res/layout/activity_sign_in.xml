<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/second"
    android:scrollbarStyle="outsideInset"
    android:visibility="visible"
    tools:context=".e_store.SignInActivity">



    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="0dp"
        app:srcCompat="@drawable/internetconnection"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/imageView4"
        android:layout_alignParentStart="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/email" />

    <EditText
        android:id="@+id/email2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView4"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="35dp"
        android:layout_toEndOf="@+id/imageView6"
        android:ems="10"
        android:textColorHint="@color/gen_white"
        android:hint="E-Mail"
        android:inputType="textEmailAddress"
        android:textColor="@color/darkWhite"
        android:visibility="visible"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@+id/imageView6"
        android:layout_alignParentStart="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="34dp"
        app:srcCompat="@drawable/password" />

    <EditText
        android:id="@+id/pass2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email2"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="35dp"
        android:layout_toEndOf="@+id/imageView9"
        android:ems="10"
        android:hint="Password"
        android:textColorHint="@color/gen_white"
        android:inputType="textPassword"
        android:textColor="@color/darkWhite"
        android:visibility="visible"
        tools:visibility="visible" />

    <Button
        android:id="@+id/signin2"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_below="@+id/FargotPass"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="35dp"
        android:background="@drawable/roundedbutton"
        android:enabled="false"
        android:text="Sign In"
        android:textColor="@color/darkWhite"
        android:visibility="visible"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/new_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/progressBar2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="-2dp"
        android:text="Don't have any account ? New user ? "
        android:textAlignment="center"
        android:textColor="@color/darkWhite"
        android:visibility="visible"
        tools:visibility="visible" />

    <Button
        android:id="@+id/signup2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/new_user"
        android:layout_alignStart="@+id/signin2"
        android:layout_alignEnd="@+id/signin2"
        android:layout_marginStart="0dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="0dp"
        android:background="@drawable/roundedbutton"
        android:text="Sign Up"
        android:textColor="@color/darkWhite"
        android:visibility="visible"
        tools:visibility="visible" />

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyle"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/signin2"
        android:layout_alignTop="@+id/signin2"
        android:layout_alignEnd="@+id/signin2"
        android:layout_alignBottom="@+id/signin2"
        android:layout_marginStart="20dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="0dp"
        android:textAlignment="center"
        android:visibility="invisible"
       />

    <Button
        android:id="@+id/passview2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignEnd="@+id/pass2"
        android:layout_alignParentTop="true"
        android:layout_marginTop="282dp"
        android:layout_marginEnd="20dp"
        android:background="@android:drawable/ic_menu_view"
        android:visibility="visible"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/FargotPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pass2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="0dp"
        android:fadeScrollbars="true"
        android:text="Forgot Password? Click here."
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/light_grey"
        android:visibility="visible"
        tools:visibility="visible" />

</RelativeLayout>