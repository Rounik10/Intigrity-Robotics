<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/light_grey"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/price_detail_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Price Details"
        android:textSize="24sp"
        android:background="@color/gen_white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/nub_products_text"
        style="bold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:background="@color/gen_white"
        android:padding="5dp"
        android:text="Price Delivery"
        android:textColor="@color/gen_black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/price_detail_text" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:background="@color/gen_white"
        android:gravity="end"
        android:padding="5dp"
        android:text="@string/pricePlaceHolder"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/nub_products_text"
        app:layout_constraintTop_toBottomOf="@id/price_detail_text" />

    <TextView
        android:id="@+id/delivery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/delivery"
        android:background="@color/gen_white"
        android:padding="5dp"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/nub_products_text"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/gen_black"/>

    <TextView
        android:id="@+id/delivery_cost_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:background="@color/gen_white"
        android:gravity="end"
        android:padding="5dp"
        android:text="@string/free"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/delivery"
        app:layout_constraintTop_toBottomOf="@+id/textView13" />

    <TextView
        android:id="@+id/total_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Amount"
        android:layout_marginTop="2dp"
        android:textColor="@color/gen_black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/delivery"
        android:background="@color/gen_white"
        android:padding="5dp"
        android:textSize="18sp"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/gen_white"
        android:gravity="end"
        android:padding="5dp"
        android:layout_marginTop="2dp"
        android:text="@string/pricePlaceHolder"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/total_amount"
        app:layout_constraintTop_toBottomOf="@+id/delivery_cost_text"/>

    <TextView
        android:id="@+id/you_saved_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="You Saved Rs.XYZ/-"
        app:layout_constraintTop_toBottomOf="@id/total_amount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="18sp"
        android:layout_marginTop="2dp"
        android:textColor="@color/gen_black"
        android:padding="4dp"
        android:background="@color/gen_white"/>

</androidx.constraintlayout.widget.ConstraintLayout>