<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <ImageView
        android:id="@+id/offer_banner"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:elevation="5dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/coupon_1" />

    <Button
        android:id="@+id/offer_use_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="USE THIS COUPON"
        android:fontFamily="@font/nunito_semibold"
        android:textSize="18sp"
        android:textStyle="bold"
        android:backgroundTint="#FF1744"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/offer_banner"
        app:layout_constraintStart_toStartOf="@+id/offer_banner"
        app:layout_constraintTop_toBottomOf="@+id/offer_banner" />
</androidx.constraintlayout.widget.ConstraintLayout>