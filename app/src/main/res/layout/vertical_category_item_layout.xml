<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/category_gradient"
    android:elevation="8dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/vertical_category_pic"
        android:layout_width="180dp"
        android:layout_height="150dp"
        android:padding="12dp"
        android:layout_gravity="center"
        android:src="@drawable/arduino"
        app:civ_border_color="#000000"
        app:civ_border_width="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <View
        android:id="@+id/divider3"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginHorizontal="8dp"
        android:background="#710303"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/vertical_category_label"/>

    <TextView
        android:gravity="center"
        android:id="@+id/vertical_category_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/vertical_category_pic"
        app:layout_constraintStart_toStartOf="@+id/vertical_category_pic"
        app:layout_constraintTop_toBottomOf="@+id/vertical_category_pic" />

</androidx.constraintlayout.widget.ConstraintLayout>